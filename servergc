<body>
  <h1>üåê Global Chat</h1>
  <div id="chat-box"></div>
  <div id="input-area">
    <input id="msg" placeholder="Type your message..." />
    <button id="send">Send</button>
  </div>

  <script>
    // Generate temporary username
    const username = "User" + Math.floor(Math.random() * 10000);
    const chatBox = document.getElementById("chat-box");
    const input = document.getElementById("msg");
    const sendBtn = document.getElementById("send");

    // Connect to a public websocket server
    const socket = new WebSocket("wss://ws.postman-echo.com/raw");

    socket.onopen = () => {
      const joinMsg = { user: "System", text: `${username} joined the chat.` };
      socket.send(JSON.stringify(joinMsg));
    };

    socket.onmessage = event => {
      try {
        const data = JSON.parse(event.data);
        displayMessage(data.user, data.text);
      } catch {
        // Some echo servers return plain text
        displayMessage("Someone", event.data);
      }
    };

    sendBtn.onclick = sendMessage;
    input.addEventListener("keypress", e => { if (e.key === "Enter") sendMessage(); });

    function sendMessage() {
      const text = input.value.trim();
      if (!text) return;
      const message = { user: username, text };
      socket.send(JSON.stringify(message));
      input.value = "";
    }

    function displayMessage(user, text) {
      const div = document.createElement("div");
      div.classList.add("msg");
      div.innerHTML = `<span class="username">${user}:</span> ${text}`;
      chatBox.appendChild(div);
      chatBox.scrollTop = chatBox.scrollHeight;
    }
  </script>
</body>
</html>
