  <style>
    body {
      background: #0e0e10;
      color: white;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    h1 { color: #ff3b3b; margin: 10px 0; }
    #chat-box {
      flex: 1;
      width: 90%;
      max-width: 700px;
      background: #1a1a1d;
      border-radius: 8px;
      padding: 10px;
      overflow-y: auto;
      box-shadow: 0 0 10px #000;
    }
    .msg { margin: 5px 0; }
    .username { color: #ff3b3b; font-weight: bold; }
    #input-area {
      display: flex;
      width: 90%;
      max-width: 700px;
      margin-bottom: 10px;
    }
    #msg {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 6px 0 0 6px;
      outline: none;
      font-size: 16px;
    }
    #send {
      background: #ff3b3b;
      border: none;
